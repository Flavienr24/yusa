<!-- Articles -->
<div class="grid-cases">
  <% @articles.each do |a| %>
    <div class="card-client">
      <%= link_to article_path(a) do %>
       <%= image_tag(a.main_image, class: 'full-width') if a.main_image.attached? %>
      <div class="content-container">
        <h2 class="rubrique-title"><%= a.title %></h2>

        <!-- If user authenticate -->
        <%= link_to 'Edit', edit_article_path(a) %>
        <%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>

<% if admin_signed_in? && current_admin.id == 1 %>
  <%= link_to 'New Articles', new_article_path %>
<% end %>
<%= render 'newsletter', model: @article %>



