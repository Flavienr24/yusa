<div class="content-container">
  <%= form_with(model: @case, local: true) do |f| %>

    <div class="form-group">
      <%= f.label :client_name, class: 'p-bold' %>
      <%= f.text_field :client_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :title, class: 'p-bold' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :main_image, class: 'p-bold' %>
      <%= image_tag(@case.main_image, class: 'full-width') if @case.main_image.attached? %>
      <%= f.file_field :main_image, class: 'form-control-file' %>
    </div>

    <div class="form-group">
      <%= f.label :body, class: 'p-bold' %>
      <%= f.rich_text_area :body %>
    </div>

      <%= f.submit "Save", class: 'btn btn-primary' %>

  <% end %>
</div>

