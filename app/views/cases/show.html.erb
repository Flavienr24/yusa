<div class="content-container text-center">
    <h1 class='rubrique-title'><%= @case.client_name %></h1>
    <h2 class='rubrique-description'><%= @case.title %></h2>
</div>
<%= image_tag(@case.main_image, class: 'full-width') %>

<div class="content-container">
<span class="full-width"><%= @case.body %></span>

<%= link_to 'Edit', edit_case_path(@case) %> |
<%= link_to 'Back', cases_path %>

<% @cases.limit(3).each do |c| %>
  <div class="card-article">
    <%= image_tag(c.main_image, class: 'full-width') %>
    <h3><%= c.client_name %></h3>
  </div>
<% end %>
<%= link_to 'Voir plus', cases_path, class: 'cta-primary' %>

</div>
